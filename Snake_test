import turtle


wn = turtle.Screen()
# Le agregamos un titulo
wn.title("Juego Snake")
# Tamaño de la ventana
wn.setup(width=600, height=600)
# Agregamos un color
wn.bgcolor("black")

# Representamiento

# Objeto turtle
head = turtle.Turtle()
# Para que se quede fijo:
head.speed(0)
# Forma 
head.shape("turtle")
# Color del objeto
head.color("red")
# Para n odejar rastro de la animación
head.penup()

# Para hacer que el programa espere a que se le de otra dir
head.direction = "up"
